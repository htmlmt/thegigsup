<div class="body--events">
    <%= render "navigation/event" %>
    <div class="events--event-container">
        <% if @event.poster.url != "/posters/original/missing.png" %>
            <div class="events--info">
                <%= image_tag @event.poster.url(:retina) %>
            <% else %>
            <div class="events--info" style="width: 0; margin: 0;">
            <% end %>
        </div>
        <% if @event.poster.url != "/posters/original/missing.png" %>
            <section class="events--list">
        <% else %>
            <section class="events--list" style="margin: 3.5rem auto">
        <% end %>
            <div class="list--month">
                <h2><%= @event.start.strftime("%B") %></h2>
            </div>
            <div class="list--day">
                <div class="day--number">
                    <h3><%= @event.start.strftime("%e") %></h3>
                    <h4><%= @event.start.strftime("%a") %></h4>
                </div>
                <div class="day--info">
                    <div class="info--container">
                        <div class="info--bands">
                        <% headliner = false %>
                        <% @event.bands.each do |band| %>
                            <% if @event.headliner == band.id %>
                                <% headliner = band %>
                            <% else %>
                                <a href="/bands/<%= band.slug %>">
                                    <div class="bands--name">
                                        <h3><%= band.name %></h3>
                                    </div>
                                    <div class="headliner--arrow">
                                        <%= image_tag('arrow-white.png') %>
                                    </div>
                                </a>
                            <% end %>
                        <% end %>
                        <% if headliner != false %>
                            <a href="/bands/<%= headliner.slug %>">
                                <div class="bands--name">
                                    <h2><%= headliner.name %></h2>
                                </div>
                                <div class="headliner--arrow">
                                    <%= image_tag('arrow-white.png') %>
                                </div>
                            </a>
                        <% end %>
                        </div>
                        <div class="info--venue">
                            <% venue_link = '/venues/' + @event.venue.slug %>
                            <%= link_to venue_link do %>
                                <div class="venue--title">
                                    <p><%= @event.venue.name %></p>
                                </div>
                                <div class="venue--arrow">
                                    <%= image_tag('arrow.png') %>
                                </div>
                            <% end %>
                        </div>
                        <div class="info--time">
                            <p class="time--time">
                                <%= @event.start.in_time_zone.strftime("%l:%M %P") %>
                            </p>
                            <div class="time--upload">
                                <%= image_tag('upload-poster.png') %>
                            </div>
                        </div>
                    </div>
                </div>
        </section>
    </div>
</div>