<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
                <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="field">
        <%= f.label :venue %><br>
        <%= f.collection_select :venue_id, Venue.all.order(:name), :id, :name, :prompt => true %>
    </div>
    <div class="field">
        <%= f.label :bands %><br>
        <%= f.collection_select(:band_ids, Band.all.order(:name), :id, :name,{}, {:multiple => true}) %>
    </div>
    <div class="field">
        <%= f.label :start %><br>
        <%= f.datetime_local_field :start %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
