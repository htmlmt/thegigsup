<div class="body--events">
    <nav class="events--navigation">
        <div class="navigation--back">
            <div class="back--arrow">
                <%= image_tag('white-arrow.png') %>
            </div>
            <div class="back--text">
                Back
            </div>
        </div>
        <div class="navigation--months">
            <% if @month.strftime("%B") == Date.today.strftime("%B") %>
                <div class="months--month months--current">
                    <div class="current--text">
                        <%= @month.strftime("%B") %> 
                    </div>
                </div>
                <div class="months--month">
                    <%= link_to (@month + 1.month).strftime("%B"), '/events/' + (@month + 1.month).strftime("%B").downcase + '/' + (@month + 1.month).strftime("%Y") %>
                </div>
                <div class="months--month">
                    <%= link_to (@month + 2.months).strftime("%B"), '/events/' + (@month + 2.months).strftime("%B").downcase + '/' + (@month + 2.months).strftime("%Y") %>
                </div>
            <% else %>
                <div class="months--month">
                    <%= link_to (@month - 1.month).strftime("%B"), '/events/' + (@month - 1.month).strftime("%B").downcase + '/' + (@month - 1.month).strftime("%Y") %>
                </div>
                <div class="months--month months--current">
                    <div class="current--text">
                        <%= @month.strftime("%B") %> 
                    </div>
                </div>
                <div class="months--month">
                    <%= link_to (@month + 1.month).strftime("%B"), '/events/' + (@month + 1.month).strftime("%B").downcase + '/' + (@month + 1.month).strftime("%Y") %>
                </div>
            <% end %>
        </div>
        <div class="navigation--add">
            <a href="/events/new">
                <div class="add--text">
                    Add an event
                </div>
                <div class="add--plus">
                    <%= image_tag('white-plus.png') %>
                </div>
            </a>
        </div>
    </nav>
    <section class="events--list">
        <% if @dates.count == 0 %>
            <div class="list--day">
                <div class="day--number">
                </div>
                <div class="day--info">
                    <div class="info--container">
                        <div class="info--title">
                            <h2>No events listed.</h2>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        <% @dates.each do |date| %>
            <div class="list--day">
                <div class="day--number">
                    <h4><%= date.strftime("%e") %></h4>
                    <p><%= date.strftime("%a") %></p>
                </div>
                <div class="day--info">
                    <% events = Event.where('start BETWEEN ? AND ?', date.beginning_of_day, date.end_of_day).order(:start) %>
                    <% events.each do |event| %>
                        <div class="info--container">
                            <div class="info--title">
                                <h2>
                                    <% event.bands.each do |band| %>
                                        <%= link_to band.name, band_path(band) %><br>
                                    <% end %>
                                </h2>
                                <%= link_to venue_path(event.venue) do %>
                                <h3>
                                    <%= event.venue.name %>
                                    <div class="arrow">
                                        <%= image_tag('arrow.png') %>
                                    </div>
                                </h3>
                                <% end %>
                            </div>
                            <div class="info--time">
                                <p>
                                    <%= event.start.in_time_zone.strftime("%l:%M %P") %>
                                </p>
                                <div class="time--upload">
                                    <%= image_tag('upload-poster.png') %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
    </section>
</div>
